//code_hema print even sum using recursive
#include <stdio.h>
int evensum(int x);
int main()
{
    int x;
    scanf("%d",&x);
    int sum=evensum(x);
    printf("%d",sum);
}
int evensum(int x)
{
    int sum=0;
    for(int i = 0; i <= x; i++){
        if(i%2 == 0){
           sum= sum+i;
        }
    }
    return sum;
}
